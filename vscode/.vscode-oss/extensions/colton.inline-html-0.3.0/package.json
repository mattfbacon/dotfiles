{
	"name": "inline-html",
	"displayName": "Inline HTML",
	"description": "IntelliSense, Emmet and Syntax Highlighting for html/css inside ES6 Template Strings.",
	"version": "0.3.0",
	"publisher": "colton",
	"license": "MIT",
	"icon": "docs/logo.png",
	"preview": true,
	"bugs": {
		"url": "https://github.com/colton81/vscode-inline-html/issues"
	},
	"keywords": [
		"html",
		"css",
		"template",
		"polymer",
		"lit-html"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/colton81/vscode-inline-html"
	},
	"engines": {
		"vscode": "^1.5.0"
	},
	"galleryBanner": {
		"color": "#0E0F15",
		"theme": "dark"
	},
	"scripts": {
		"compile": "./node_modules/.bin/tsc -p .",
		"watch:compile": "./node_modules/.bin/tsc --watch -p .",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"package": "vsce package"
	},
	"categories": [
		"Programming Languages"
	],
	"activationEvents": [
		"onLanguage:typescript",
		"onLanguage:javascript"
	],
	"main": "./client/main",
	"contributes": {
		"commands": [
			{
				"command": "editor.action.formatInlineHtml",
				"title": "Format Inline HTML/CSS"
			}
		],
		"grammars": [
			{
				"injectTo": [
					"source.js",
					"source.js.jsx",
					"source.jsx",
					"source.ts",
					"source.tsx"
				],
				"scopeName": "es6.inline.html",
				"path": "./syntaxes/es6.inline.html.json",
				"embeddedLanguages": {
					"meta.embedded.block.html": "html",
					"meta.template.expression.ts": "typescript"
				}
			},
			{
				"injectTo": [
					"source.js",
					"source.js.jsx",
					"source.jsx",
					"source.ts",
					"source.tsx"
				],
				"scopeName": "es6.inline.css",
				"path": "./syntaxes/es6.inline.css.json",
				"embeddedLanguages": {
					"meta.embedded.block.css": "css",
					"meta.template.expression.ts": "typescript"
				}
			}
		]
	},
	"devDependencies": {
		"vscode-languageserver-types": "^3.16.0",
		"@types/node": "14.14.35",
		"vscode": "^1.1.37",
		"typescript": "^4.2.3"
	},
	"dependencies": {
		"vscode-css-languageservice": "^5.1.0",
		"vscode-emmet-helper": "^2.4.1",
		"vscode-html-languageservice": "^4.0.1"
	},
	"__metadata": {
		"id": "1df7e711-ff5b-466d-a1c8-c63d905e7174",
		"publisherId": "cf061215-424b-4874-b1c0-ed2332718d2d",
		"publisherDisplayName": "colton",
		"isPreReleaseVersion": false,
		"preRelease": false,
		"installedTimestamp": 1647359100195
	}
}