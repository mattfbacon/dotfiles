bindsym $mod+plus scratchpad show

# Screen lock on Win+,
bindsym $mod+comma exec loginctl lock-session

set $chromeflags --ozone-platform=wayland --enable-features=UseOzonePlatform,WebRTCPipeWireCapturer

mode "app_launch" {
	bindsym b mode "default"; exec browse.sh home window
	bindsym shift+b mode "default"; exec browse.sh home private
	bindsym mod1+b mode "default"; exec browse.sh college window
	bindsym s mode "default"; exec browse.sh school window
	bindsym c mode "default"; exec vscodium
	bindsym d mode "default"; exec discord-ptb $chromeflags
	bindsym m mode "default"; exec gnome-system-monitor
	bindsym f mode "default"; exec thunar
	bindsym shift+f mode "default"; exec nemo
	bindsym r mode "default"; exec rhythmbox
	bindsym v mode "default"; exec pavucontrol
	bindsym x mode "default"; exec xkill
	bindsym t mode "default"; exec torbrowser-launcher

	# back to normal: Enter or Escape or $mod+o
	bindsym Return mode "default"
	bindsym Escape mode "default"
	bindsym $mod+o mode "default"
}

bindsym $mod+o mode "app_launch"

bindsym Control+mod1+Delete exec gnome-system-monitor

bindsym Print exec ~/.local/bin/scrot.sh

