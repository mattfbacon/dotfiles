# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
	status_command i3blocks
	i3bar_command i3bar -t
	position top
	bindsym button4 nop
	bindsym button5 nop
	tray_output primary
	strip_workspace_numbers yes
	colors {
		background $inactive
		# format: border background foreground
		# current workspace
		focused_workspace $primary $primary_semi $foreground
		# current workspace but on inactive monitor
		active_workspace $primary $primary_semi $foreground
		# other workspaces
		inactive_workspace $inactive_border $inactive $inactive_foreground
		# self-explanatory
		urgent_workspace $inactive_border $inactive $inactive_urgent_fg
		# when you're in a mode
		binding_mode $primary $primary_semi $foreground
	}
}

# window border colors
# format: border background foreground
client.focused $primary_light $primary_light $foreground
client.unfocused $inactive_opaque $inactive_opaque $foreground_dim
# same as unfocused afaict
client.focused_inactive $inactive_opaque $inactive_opaque $foreground_dim
client.urgent $inactive_urgent_fg $inactive $urgent_fg

