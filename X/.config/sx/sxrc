userresources=$HOME/.Xresources
if [ -f $userresources ]; then
	xrdb -merge $userresources
fi

modmap=$HOME/.Xmodmap
if [ -f $modmap ]; then
	xmodmap $modmap
fi

source $HOME/.xinitrc

/usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1 </dev/null 2>&1 >/dev/null &

emon
emon
exec ${WM_BIN:-i3}
